<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.loginuidesign">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LoginUiDesign">
        <activity
            android:name=".landingDetailHostActivity"
            android:exported="false"
            android:label="@string/title_activity_landing_detail_host"
            android:resizeableActivity="true"
            tools:targetApi="24" />
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.LoginUiDesign.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OTP"
            android:exported="false" />
        <activity
            android:name=".BackgroundImage"
            android:exported="false" />
        <activity
            android:name=".CompanyInformation"
            android:exported="false" />
        <activity
            android:name=".Login"
            android:exported="true"></activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>